[
    {
      "name": "search-portal-nginx",
      "image": "${REPOSITORY}/search-portal-nginx:${version}",
      "essential": true,
      "portMappings": [
        {
          "hostPort": 80,
          "protocol": "tcp",
          "containerPort": 80
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/search-portal",
          "awslogs-region": "eu-central-1",
          "awslogs-stream-prefix": "${version}",
          "awslogs-multiline-pattern": "^\\[?\\d\\d\\d\\d\\-\\d\\d\\-\\d\\d \\d\\d:\\d\\d:\\d\\d,\\d\\d\\d"
        }
      }
    },
    {
        "name": "search-portal-container",
        "image": "${REPOSITORY}/search-portal:${version}",
        "cpu": 0,
        "essential": true,
        "portMappings": [
            {
                "hostPort": 8080,
                "protocol": "tcp",
                "containerPort": 8080
            }
        ],
        "environment": [
            { "name" : "APPLICATION_MODE", "value" : "${mode}" }
        ],
        "logConfiguration": {
            "logDriver": "awslogs",
            "options": {
              "awslogs-group": "/ecs/search-portal",
              "awslogs-region": "eu-central-1",
              "awslogs-stream-prefix": "${version}",
              "awslogs-multiline-pattern": "^\\[?\\d\\d\\d\\d\\-\\d\\d\\-\\d\\d \\d\\d:\\d\\d:\\d\\d,\\d\\d\\d"
            }
        }
    }
]
