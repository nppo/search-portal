[
    {
      "essential": true,
      "image": "906394416424.dkr.ecr.eu-central-1.amazonaws.com/aws-for-fluent-bit:latest",
      "name": "log_router",
      "firelensConfiguration": {
          "type": "fluentbit"
      },
      "logConfiguration": {
          "logDriver": "awslogs",
          "options": {
              "awslogs-group": "firelens-container",
              "awslogs-region": "eu-central-1",
              "awslogs-stream-prefix": "firelens"
          }
      },
      "memoryReservation": 50
    },
    {
        "name": "search-portal-container",
        "image": "${REPOSITORY}/search-portal:${version}",
        "cpu": 0,
        "essential": true,
        "portMappings": [
            {
                "hostPort": 8080,
                "protocol": "tcp",
                "containerPort": 8080
            }
        ],
        "environment": [
            { "name" : "APPLICATION_MODE", "value" : "${mode}" }
        ],
        "logConfiguration": {
            "logDriver": "awsfirelens",
            "options": {
              "Name": "firehose",
              "region": "eu-central-1",
              "delivery_stream": "logs_to_es"
            }
        }
    }
]
