[
    {
        "name": "harvester-container",
        "image": "${REPOSITORY}/harvester:${version}",
        "cpu": 0,
        "essential": true,
        "portMappings": [
            {
                "hostPort": 8080,
                "protocol": "tcp",
                "containerPort": 8080
            },
            {
                "hostPort": 5555,
                "protocol": "tcp",
                "containerPort": 5555
            }
        ],
        "environment": [
            { "name" : "PYTHONUNBUFFERED", "value" : "1" },
            { "name" : "APPLICATION_MODE", "value" : "${mode}" },
            { "name" : "POL_DJANGO_DEBUG", "value" : "0" },
            { "name" : "POL_SECRETS_SURFCONEXT_SECRET_KEY", "value" : "not-used" },
            { "name" : "POL_SECRETS_ELASTIC_SEARCH_PASSWORD", "value" : "not-used" }
        ],
        "logConfiguration": {
            "logDriver": "awslogs",
            "options": {
                "awslogs-group": "/ecs/harvester",
                "awslogs-region": "eu-central-1",
                "awslogs-stream-prefix": "${version}",
                "awslogs-multiline-pattern": "^\\[?\\d\\d\\d\\d\\-\\d\\d\\-\\d\\d \\d\\d:\\d\\d:\\d\\d,\\d\\d\\d"
            }
        }
    }
]
